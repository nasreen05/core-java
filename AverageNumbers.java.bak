public class AverageNumbers {
    public static void main(String[] args) {
        
        // Example numbers (you can change these)
        int numbers[] = {10, 20, 30, 40, 50};
        int n = numbers.length;   // total count of numbers
        
        int sum = 0;
        
        // Loop to calculate sum
        for (int i = 0; i < n; i++) {
            sum = sum + numbers[i];
        }
        
        // Calculate average using control statement
        if (n > 0) {
            double average = (double) sum / n;
            System.out.println("Average of " + n + " numbers = " + average);
        } else {
            System.out.println("No numbers to calculate average");
        }
    }
}
